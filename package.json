    "lucide-react": "^0.525.0",
    "motion": "^12.23.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-responsive": "^10.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.0.6",
    "three": "^0.178.0",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.0-beta.6",
